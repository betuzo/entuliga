
$blueblack = #233245
$bluehi = #32517f
$bluelo = #0497df
$grayapp = #eef1f7

html
	position relative
	min-height 100%

body
	margin-bottom 50px //Margin bottom by footer height
	padding-top 50px


.footer
	position absolute
	bottom 0
	width 100%
	height 50px //Set the fixed height of the footer here
	background #32517f

	span
		color #fff
		position absolute
		bottom 15px


.starter-template
	padding-top 15px

.menu-liga
	li.nav-item-entuliga
		a
			color #ffffff
		&:hover
			background $grayapp
		&.active
			a
				background #fff
				&:hover
					background @grayapp
				&:focus
					background #fff


.center-box-login
	margin 50px auto
	max-width 400px
	padding 5px


.form-login, .form-signup
	padding 10px

.form-login-heading, .form-signup-heading
	border-bottom 1px solid $grayapp
	margin-bottom 20px


